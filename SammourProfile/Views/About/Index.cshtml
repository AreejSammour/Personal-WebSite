@model List<Expertise>
@{
    ViewData["Title"] = "About Me";
}

<div class="DivSize">
    <h1 class="mb-2 display-4 text-center">About Me</h1>
    <hr style="width:20%;margin:0px auto;height:5px;" />
    <hr style="width:10%;margin:5px auto;height:3px;" />
    <p>Challenges are what make life interesting and overcoming them is what makes life meaningful</p>

    
        <div class="TimeLineCol">
            <h2>Education & Work Experience...</h2>
            <ul id='timeline'>
                @{int counter = 0;
                  string work = "work";
                }
                @foreach (Expertise Item in Model)
                {
                    counter = counter + 1; 
                    <li class='work'>
                        @{ if (counter == 1)
                           {
                                <input class='radio' id='@work@counter' name='works' type='radio' checked>
                           }
                           else
                           {
                                <input class='radio' id='@work@counter' name='works' type='radio'>
                           }
                        }
                        <div class="relative">
                            <label for='@work@counter'>@Item.Field</label>
                            <span class='date'>@Item.Date</span>
                            <span class='circle'></span>
                        </div>
                        <div class='content'>
                            <p>@Item.Description</p>
                        </div>
                    </li>  
                }
            </ul>
        </div>
    
  
</div>